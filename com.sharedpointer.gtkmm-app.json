{
    "app-id": "com.sharedpointer.gtkmm-app",
    "base": "com.sharedpointer.gtkmm.BaseApp",
    "base-version": "master",
    "version": "master",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.22",
    "sdk": "org.gnome.Sdk",
    "command": "simple-gtkmm-app",
    "finish-args": ["--share=network", "--socket=x11", "--filesystem=host" ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": ["/include", "/lib/*/include", "/lib/pkgconfig", "/share/pkgconfig", "/share/aclocal", "/man", "/share/man", "/share/info", "/share/gtk-doc", "*.la", "*.a" ],
    "modules": [
        {
            "name": "gtkmm-app",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/futuretim/simple-gtkmm-flatpak-app.git",
                    "branch": "flatpak_base_app"
                }
            ],
            "buildsystem": "cmake",
            "config-opts": [ "-DCMAKE_INSTALL_PREFIX=/app" ]
        }
    ]
}
